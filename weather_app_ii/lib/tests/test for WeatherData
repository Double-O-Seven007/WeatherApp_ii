import 'package:flutter/cupertino.dart';
import 'package:weather_app/models/mapData.dart';

class WeatherData extends MapData {
  String _weatherIcon = '';
  String _weatherDescription = '';
  double _temperature = 0.0;
  double _feelsLike = 0.0;
  double _pressure = 0.0;
  double _humidity = 0.0;
  double _windSpeed = 0.0;
  DateTime _sunrise = DateTime(0);
  DateTime _sunset = DateTime(0);

  String get weathericon => _weatherIcon;
  String get weaatherDescription => _weatherDescription;
  double get temperature => _temperature;
  double get feelsLike => _feelsLike;
  double get pressure => _pressure;
  double get humidity => _humidity;
  double get windSpeed => _windSpeed;
  DateTime get sunrise => _sunrise;
  DateTime get sunset => _sunset;

  set weatherIcon(String weatherIcon) {
    _weatherIcon = weatherIcon;
    notifyListeners();
  }

  set weatherDescription(String weatherDescription) {
    _weatherIcon = weatherDescription;
    notifyListeners();
  }

  set temperature(double temperature) {
    _temperature = temperature;
    notifyListeners();
  }

  set feelsLike(double feelsLike) {
    _feelsLike = feelsLike;
    notifyListeners();
  }

  set pressure(double pressure) {
    _pressure = pressure;
    notifyListeners();
  }

  set humidity(double humidity) {
    _humidity = humidity;
    notifyListeners();
  }

  set windSpeed(double windSpeed) {
    _windSpeed = windSpeed;
    notifyListeners();
  }

  set sunrise(DateTime sunrise) {
    _sunrise = (sunrise);
    notifyListeners();
  }

  set sunset(DateTime sunset) {
    _sunset = sunset;
    notifyListeners();
  }



  
}
